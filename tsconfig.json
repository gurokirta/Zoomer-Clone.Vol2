{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "exclude": ["node_modules", "build", "dist", "config", "scripts", "src/**/*.test.ts", "src/**/*.test.tsx"]
}
